<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checkable="true">
        <shape android:shape="oval">
            <stroke android:color="#828385" android:dashWidth="2dp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#828385"/>
                </shape>
            </item>
            <item android:left="9dp" android:right="9dp" android:top="9dp" android:bottom="9dp">
                <bitmap android:src="@drawable/IcCheckWhite" android:gravity="center"/>
            </item>
        </layer-list>
    </item>

    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#FF28E1A5" />
                </shape>
            </item>

            <item android:left="9dp" android:right="9dp" android:top="9dp" android:bottom="9dp">
                <bitmap android:src="@drawable/IcWorkout" android:gravity="center" />
            </item>

        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#892E3134" />
                </shape>
            </item>

            <item android:left="9dp" android:right="9dp" android:top="9dp" android:bottom="9dp">
                <bitmap android:src="@drawable/IcWorkout" android:gravity="center" />
            </item>

        </layer-list>
    </item>

</selector>